{
  "expo": {
    "name": "camera-gallery",
    "slug": "camera-gallery",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermissionRequired": "Allow $(PRODUCT_NAME) to access your photos.",
          "savePhotosPermission" : "Allow $(PRODUCT_NAME) to save photos",
          "isAccessMediaLocationEnable": "true"
        }
      ]
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
